{
    "name": "Youglish & Howjsay Search by Hovering",
    "version": "1.0.0",
    "description": "This is an extension to look up pronunciation on Youglish website by hovering over the text.",
    "permissions": [
        "activeTab"
    ],
    "manifest_version": 3,
    "author": "",
    "action": {
        "default_popup": "popup.html",
        "default_title": "Youglish Search"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "content.css"
            ],
            "run_at": "document_end"
        }
    ]
}